<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootAddMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top bar -->
        <LinearLayout
            android:id="@+id/topBarAddMethod"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_arrow_back_24"
                android:contentDescription="Back"/>

            <TextView
                android:id="@+id/tvAddItemTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Add Item"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <ImageButton
                android:id="@+id/btnNextFromMethod"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_check_circle_24"
                android:contentDescription="Next"/>
        </LinearLayout>

        <View
            android:id="@+id/dividerTopBar"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            app:layout_constraintTop_toBottomOf="@id/topBarAddMethod"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Step indicator -->
        <LinearLayout
            android:id="@+id/sectionStep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/dividerTopBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 1 of 5"
                android:textColor="#2563EB"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="#E5E7EB">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#2563EB"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/dividerAfterStep"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            app:layout_constraintTop_toBottomOf="@id/sectionStep"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Question / subtitle -->
        <LinearLayout
            android:id="@+id/sectionQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/dividerAfterStep"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How would you like to add this item?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Choose a method to capture item information"
                android:textSize="13sp"
                android:textColor="#6B7280"/>
        </LinearLayout>

        <!-- Options list -->
        <LinearLayout
            android:id="@+id/layoutMethodOptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/sectionQuestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Take Photo (selected) -->
            <LinearLayout
                android:id="@+id/optionTakePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_method_option_selected"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_method_icon_blue"
                    android:padding="8dp"
                    android:src="@drawable/outline_photo_camera_24"
                    android:contentDescription="Take Photo"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Take Photo"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#111827"/>

                        <TextView
                            android:id="@+id/badgeRecommended"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:text="Recommended"
                            android:textSize="11sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/bg_badge_blue"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="AI will extract details from the image"
                        android:textSize="13sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconTakePhotoSelected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/outline_check_box_outline_blank_24"
                    android:contentDescription="Selected"/>
            </LinearLayout>

            <!-- Scan Barcode / QR -->
            <LinearLayout
                android:id="@+id/optionScanBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_method_option"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#F3E8FF"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:contentDescription="Scan Barcode or QR"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scan Barcode / QR"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Automatically fetch product details"
                        android:textSize="13sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconScanSelected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/outline_check_box_outline_blank_24"
                    android:contentDescription="Selected"/>
            </LinearLayout>

            <!-- Upload Receipt -->
            <LinearLayout
                android:id="@+id/optionUploadReceipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_method_option"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#ECFDF3"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:contentDescription="Upload Receipt"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Receipt"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="OCR will extract purchase details"
                        android:textSize="13sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconUploadSelected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/outline_check_box_outline_blank_24"
                    android:contentDescription="Selected"/>
            </LinearLayout>

            <!-- Enter Manually -->
            <LinearLayout
                android:id="@+id/optionEnterManually"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_method_option"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#F3F4F6"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Enter Manually"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Manually"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Type in all the details yourself"
                        android:textSize="13sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconManualSelected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/outline_check_box_outline_blank_24"
                    android:contentDescription="Selected"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
